# EditorConfig: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# because in this metadata, we can use markdown line break (double trailing whitespace)
[lua_intellisense/*.lua]
trim_trailing_whitespace = false

# 4 space indentation
[*.{c,cpp,h,hpp,js,css,html}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{json,xml,yaml,yml,lua}]
indent_style = space
indent_size = 2

# Tab indentation
[Makefile*]
indent_style = tab
